#!/usr/bin/env bash

echo Loading arguments

for argument in $@
  do
    echo The Argument $argument

    case $argument in
      -l=*|--letterbox=*)
        MATTE="${argument#*=}"
        echo HOT DAMN IM IN $MATTE
        # shift # past key
        # shift # past value
        shift # past argument AND value
      ;;
    esac
  done
