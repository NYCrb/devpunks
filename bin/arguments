#!/usr/bin/env bash

echo Loading arguments

for argument in $@
  do
    echo The Argument $argument

    case $argument in
      -l=*|--letterbox=*)
        MATTE=$2
        echo HOT DAMN IM IN $MATTE
        # shift # past key
        # shift # past value
        shift # past argument AND value
      ;;
    esac
  done

while test $# -gt 0
do
  argument=$1

  case $argument in
    -l|--letterbox)
      MATTE="$2"
      echo HOT DAMN IM IN $MATTE
      shift # past key
      shift # past value
    ;;
  esac

  shift
  echo Variable  $argument
  echo Letterbox $MATTE
done
