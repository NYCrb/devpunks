#!/usr/bin/env bash

for argument in $@
  do
    echo The Argument $argument

    case $argument in
      -h|--help)
        echo
        echo "Options:"
        echo "-h, --help                   show brief help"
        echo "-l, --letterbox=[color|blur] set letterbox to color or blurred video matte"
        echo
        exit 0
        ;;
      -l=*|--letterbox=*)
        MATTE="${argument#*=}"
        echo HOT DAMN IM IN $MATTE
        # shift # past key
        # shift # past value
        shift # past argument AND value
        ;;
      --letterbox) echo "$1 requires a value to be set (i.e. $1=value)" >&2; exit 1;;
    esac
  done

