#!/usr/bin/env bash

# https://stackoverflow.com/questions/192249/how-do-i-parse-command-line-arguments-in-bash

for i in `seq 1 10`
  do
    echo $i
  done


for argument in "$@"
  do
    echo The Argument $argument

    case $argument in

      -help)
        echo
        echo "Options:"
        echo "-h, --help                   show brief help"
        echo "-l, --letterbox=[color|blur] set letterbox to color or blurred video matte"
        echo
        exit 0
        ;;

      -input=*)
        declare -r INPUT="${argument#*=}"
        shift # past argument AND value
        ;;

      -letterbox=*)
        declare -r MATTE="${argument#*=}"
        # shift # past key
        # shift # past value
        shift # past argument AND value
        ;;

      -passes=*)
        declare -r PASSES="${argument#*=}"
        shift # past argument AND value
        ;;

      -letterbox|-passes)
        echo "$1 requires a value to be set (i.e. $1=value)" >&2; exit 1;;

      -*)
        echo "unknown option: $1" >&2; exit 1;;

      *)
        declare -r OUTPUT="$1"
        ;;
    esac
  done


echo MATTE  $MATTE
echo PASSES $PASSES
echo OUTPUT $OUTPUT
