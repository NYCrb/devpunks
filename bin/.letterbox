#!/usr/bin/env bash

# How Blurs & Filters Work - https://www.youtube.com/watch?v=C_zFhWdM4ic
echo Loading letterbox

letterbox.color () {
  local color="black"
  local filter="pad=720:720:(ow-iw)/2:(oh-ih)/2:$color"
  echo $filter
}

letterbox.blur () {
  echo Blurred
}

declare -fx letterbox.color
